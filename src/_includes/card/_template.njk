<div class="flex flex-col md:flex-row">
{% for card in params.cards %}
<div class="m-4 border-solid border-gray-700 border overflow-hidden max-w-lg md:max-w-sm">
  <h2 class="text-xl font-bold p-4 border-b border-gray-200"><a href="{{ card.link }}" class="hover:underline hover:text-gray-700"> {{ card.title }}</a></h2>
  <p class="p-4 h-48">{{ card.content }}</p>
  <a href="{{ card.link }}" class="py-2 px-4 text-white bg-blue-700 block hover:bg-blue-500 hover:underline"> {{ card.linktext }} </a>
</div>
{% endfor %}
</div>