<section class="flex flex-col md:flex-row items-center md:justify-evenly">
{% for card in params.cards %}
<article class="w-full md:w-1/3 m-4 border-solid border-gray-700 border focus:shadow-xl hover:shadow-xl">
  <h2 class="text-xl font-bold p-2 m-0 border-b border-gray-300 text-center bg-gray-50"><a href="{{ card.link }}" class="hover:underline hover:text-gray-700"> {{ card.title }}</a></h2>
  <p class="p-4 h-48">{{ card.content }}</p>
  <a href="{{ card.link }}" class="py-2 px-4 text-white bg-blue-700 block hover:bg-blue-500 hover:underline text-center"> {{ card.linktext }} </a>
</article>
{% endfor %}
</section>