{% macro callout(text, ctabuttontext, ctalink) %}
<div class="mx-auto border border-gray-500 p-4 bg-gray-200 w-1/2 my-6 shadow-xl rounded-md">
    <p class="text-center font-bold m-4"> {{ text }} </p>
    <div class="flex justify-center m-8">
        <a href="{{ ctalink }}" class="text-center p-4 max-w-max border-black border-solid rounded-3xl border hover:bg-gray-400 "> 
            {{ ctabuttontext }} </a>
    </div>
</div>
{% endmacro %}