{% macro callout(content, ctatext, ctalink) %}
<div class="mx-auto border border-gray-500 p-4 bg-gray-200 col-span-3 w-2/3 my-6 shadow-xl rounded-md">
    <p class="text-center font-bold m-4"> {{ content | replace("[content]" , "") }} </p>
    <div class="flex justify-center m-8">
        <a href="{{ ctalink | replace("[ctalink]", "") }}" class="text-center p-4 max-w-max border-black border-solid rounded-3xl border hover:bg-gray-400 "> 
            {{ ctatext | replace("[ctatext]", "") }} </a>
    </div>
</div>
{% endmacro %}