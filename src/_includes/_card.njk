{% macro card(title, content, link, linktext, imgsource, imgalt) %}
<div class="m-4 border-solid border-gray-700 border">
  
  
  <h2 class="text-xl font-bold"><a href="{{ link | replace("[link]", "") }}" class="hover:underline hover:text-gray-700"> {{ title | replace("[title]", "")}}</a></h2>

  <p>{{ content | replace("[content]", "")}}</p>

  <a href="{{ link | replace("[link]", "") }}" class=""> {{ linktext | replace("[linktext]", "") }} </a>

  <img src="{{ imgsource | replace("[imgsource]", "../img/")}}" alt="{{ imgalt | replace("[imgalt]", "")}}" class="" />
 

</div>
{% endmacro %}
