{% macro card(title, content, link, linktext, imgsource, imgalt) %}
<div class="m-4 border-solid border-gray-700 border overflow-hidden">
  
  <img src="{{ imgsource | replace("[imgsource]", "../img/")}}" alt="{{ imgalt | replace("[imgalt]", "")}}" class="" />

  <h2 class="text-xl font-bold p-4 border-b border-gray-200"><a href="{{ link | replace("[link]", "") }}" class="hover:underline hover:text-gray-700"> {{ title | replace("[title]", "")}}</a></h2>

  <p class="p-4 h-64">{{ content | replace("[content]", "")}}</p>

  <a href="{{ link | replace("[link]", "") }}" class="py-2 px-4 text-white bg-black block hover:bg-gray-800 hover:underline"> {{ linktext | replace("[linktext]", "") }} </a>

  
 

</div>
{% endmacro %}
